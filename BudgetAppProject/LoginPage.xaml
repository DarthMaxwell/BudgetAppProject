<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetAppProject.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label Text="BudjetApp" FontSize="50" HorizontalOptions="Center" Margin="50"/>

        <!--Login-->
        <Frame x:Name="loginFrame" BorderColor="#757575" CornerRadius="5" Padding="0" HasShadow="False" Margin="30">
            <VerticalStackLayout Spacing="10">
                <Label Text="Username" TextColor="#757575" Margin="15, 10, 0, 0"/>
                <Entry x:Name="username" Placeholder="Username" Margin="15, 0" TextChanged="checkCanSignIn"/>

                <Label Text="Password" TextColor="#757575" Margin="15, 10, 0, 0"/>
                <Entry x:Name="password" IsPassword="True" Placeholder="Password" Margin="15, 0" TextChanged="checkCanSignIn"/>

                <Button x:Name="signInButton" Text="Sign In" IsEnabled="False" Clicked="LoginButton_Clicked" BackgroundColor="#757575" BorderColor="#757575" Margin="15, 0"/>
                <Button Text="Register" Clicked="SwapToRegButton_Clicked" BackgroundColor="Transparent" BorderWidth="0" TextColor="#757575" HorizontalOptions="Start"/>
                <Button Text="Forgot password?" BackgroundColor="Transparent" BorderWidth="0" TextColor="#757575" HorizontalOptions="Start"/>
            </VerticalStackLayout>
        </Frame>

        <!--Register-->
        <Frame x:Name="regFrame" BorderColor="#757575" CornerRadius="5" Padding="0" HasShadow="False" Margin="30" IsVisible="False">
            <VerticalStackLayout Spacing="10">
                <Label Text="Username" TextColor="#757575" Margin="15, 10, 0, 0"/>
                <Entry x:Name="regusername" Placeholder="Username" Margin="15, 0" TextChanged="checkCanReg"/>

                <Label Text="Password" TextColor="#757575" Margin="15, 10, 0, 0"/>
                <Entry x:Name="regpassword" IsPassword="True" Placeholder="Password" Margin="15, 0" TextChanged="checkCanReg"/>

                <Label Text="Confirm Password" TextColor="#757575" Margin="15, 10, 0, 0"/>
                <Entry x:Name="confirmpassword" IsPassword="True" Placeholder="Confirm Password" Margin="15, 0" TextChanged="checkCanReg"/>

                <Button x:Name="regButton" Text="Register" IsEnabled="False" Clicked="RegisterButton_Clicked" BackgroundColor="#757575" BorderColor="#757575" Margin="15, 0"/>
                <Button Text="Login" Clicked="SwapToLogButton_Clicked" BackgroundColor="Transparent" BorderWidth="0" TextColor="#757575" HorizontalOptions="Start"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>